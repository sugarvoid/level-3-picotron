Pixel=Object:extend()

function Pixel:new(x,y)
	self.start_x=x
	self.spawn_x_min = x-6
	self.spawn_x_max = x+6
	self.x=randi(self.spawn_x_min, self.spawn_x_max)
	self.y=y
	self.max_y=y-15
	self.move_dir=0.3
	self:reset_props()
end

function Pixel:reset_props()
	self.x=randi(self.spawn_x_min, self.spawn_x_max)
	self.col=rnd({0,5,24,22})
	self.speed=rnd({0.2, 0.3, 0.4})
	self.x_min=self.x-2
	self.x_max=self.x+2
end

function Pixel:update()
	if self.y <= self.max_y then
		self.y = self.max_y+15
		self:reset_props()
	else
		self.y-=self.speed
	end
	
	self.x+=self.move_dir
	
	if self.x <= self.x_min or self.x >= self.x_max then
		self.move_dir*=-1
	end
end

function Pixel:draw()
	pset(self.x,self.y,self.col)
end
