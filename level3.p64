Smoke=Object:extend()

function Smoke:new(x,y)
	self.pixels = {}
	for i=1,10 do 
		local p = Pixel(x,y)
		add(self.pixels, p)
	end
end

function Smoke:update()
	foreach(self.pixels, function(obj) obj:update() end)
end

function Smoke:draw()
	foreach(self.pixels, function(obj) obj:draw() end)
end

function Smoke:set_y(y)
	self.y=y
	for p in all(self.pixels) do
		p.max_y=y-15
	end
end
